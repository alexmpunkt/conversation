{
    "name": "conversio/conversation",
    "require": {
        "php": "^7.0",
        "conversio/mail": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "5.5.*"
    },
    "autoload": {
        "psr-4": {
            "Conversio\\Conversation\\": "src",
            "Conversio\\Conversation\\Tests\\": "tests"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/alexmpunkt/mail.git"
        }
    ],
    "scripts": {
        "test": [
            "phpunit"
        ],
        "coverage": [
            "phpunit --coverage-clover=coverage.xml"
        ]
    }
}